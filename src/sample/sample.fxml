<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <HBox>
         <children>
            <TextField fx:id="display" alignment="CENTER_RIGHT" prefHeight="60.0" prefWidth="200.0" style="-fx-label-padding: 15px;" text="Calculator">
               <font>
                  <Font size="27.0" />
               </font>
            </TextField>
         </children>
      </HBox>
      <HBox>
         <children>
            <Button mnemonicParsing="false" onAction="#processInput" prefHeight="35.0" prefWidth="50.0" text="←" />
            <Button mnemonicParsing="false" onAction="#processInput" prefHeight="35.0" prefWidth="50.0" text="C" />
            <Button mnemonicParsing="false" onAction="#processInput" prefHeight="35.0" prefWidth="50.0" text="M" />
            <Button mnemonicParsing="false" onAction="#processInput" prefHeight="35.0" prefWidth="50.0" text="/" />
         </children>
      </HBox>
      <HBox>
         <children>
            <Button mnemonicParsing="false" onAction="#processInput" prefHeight="35.0" prefWidth="50.0" text="7" />
            <Button mnemonicParsing="false" onAction="#processInput" prefHeight="35.0" prefWidth="50.0" text="8" />
            <Button mnemonicParsing="false" onAction="#processInput" prefHeight="35.0" prefWidth="50.0" text="9" />
            <Button mnemonicParsing="false" onAction="#processInput" prefHeight="35.0" prefWidth="50.0" text="*" />
         </children>
      </HBox>
      <HBox>
         <children>
            <Button mnemonicParsing="false" onAction="#processInput" prefHeight="35.0" prefWidth="50.0" text="4" />
            <Button mnemonicParsing="false" onAction="#processInput" prefHeight="35.0" prefWidth="50.0" text="5" />
            <Button mnemonicParsing="false" onAction="#processInput" prefHeight="35.0" prefWidth="50.0" text="6" />
            <Button mnemonicParsing="false" onAction="#processInput" prefHeight="35.0" prefWidth="50.0" text="-" />
         </children>
      </HBox>
      <HBox>
         <children>
            <Button mnemonicParsing="false" onAction="#processInput" prefHeight="35.0" prefWidth="50.0" text="1" />
            <Button mnemonicParsing="false" onAction="#processInput" prefHeight="35.0" prefWidth="50.0" text="2" />
            <Button mnemonicParsing="false" onAction="#processInput" prefHeight="35.0" prefWidth="50.0" text="3" />
            <Button mnemonicParsing="false" onAction="#processInput" prefHeight="35.0" prefWidth="50.0" text="+" />
         </children>
      </HBox>
      <HBox>
         <children>
            <Button mnemonicParsing="false" onAction="#processInput" prefHeight="35.0" prefWidth="100.0" text="0" />
            <Button mnemonicParsing="false" onAction="#processInput" prefHeight="35.0" prefWidth="50.0" text="." />
            <Button mnemonicParsing="false" onAction="#processInput" prefHeight="35.0" prefWidth="50.0" text="=" />
         </children>
      </HBox>
   </children>
</VBox>
